<div class="container">
  <div class="row">
    <% @sessions.each do |session| %>
    <div class="col-xs-12 col-sm-4">
    <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('background.jpg');">
      <div class="card-category">session.lesson.location</div>
      <div class="card-description">
        <h2>session.lesson.name</h2>
        <p>Very cool stuff, useful and smart</p>
      </div>
      <img class="card-user avatar" src="user.jpg">
      <a class="card-link" href="#" ></a>
    </div>
      <!-- insert <div class="card"> -->
    </div>
    <% end %>
  </div>
</div>
