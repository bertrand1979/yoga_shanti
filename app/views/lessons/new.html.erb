  <%= f.error_notification %>

  <%= f.input :name, placeholder: "Label your class. Ex : Vinyasa 90 mn" %>
  <%= f.input :address, placeholder: "16 villa Gaudelet 75011 Paris" %>
  <%= f.input :price, placeholder: "Price in Euros", collection: 1..100 %>
