<div class="container">
  <div class="row text-center">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">

      <h2><%= @session.lesson.name %></h2>
      <p><% @session.lesson.photos.each do |photo| %>
        <%= cl_image_tag photo.path, width: 300, height: 200, crop: :fill %>
      <% end %></p>
      <p>Location: <%= @session.lesson.address %></p>
      <p>Description: <%= @session.lesson.description %></p>
      <p>Category: <%= @session.lesson.yoga_category %></p>
      <p>Date: <%= @session.starts_at %></p>
        <% if @session.conf_status == false %>
        <p>Availability: 1 seat available</p>
        <%= simple_form_for @session do |f| %>
        <%= f.input :conf_status, label: 'Check the box to book this class and confirm'%>
        <%= f.submit 'Confirm', class: 'btn-success' %>
      <% end %>
        <% else %>
        <p>Availability: 0 seat available, sorry, try another class!</p>
        <p>User registered: <%= @session.user_id %></p>
        <%= link_to('Classes list', root_path, class: 'btn btn-primary') %>
        <% end %>
    </div>
  </div>
</div>

