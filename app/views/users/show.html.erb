<div class="wrapper padded bg-grey">
  <div class="container text-center">
    <%= image_tag(@user.picture, html_option = {class:"img-circle", width:"100px"}) %>
    <% if current_user.id == @user.id %>
      <h1> My profile </h1>
    <% else %>
      <h1><%=@user.first_name%>'s profile</h1>
    <%end%>
  </div>
</div>

<div class="container text-center">
  <h2>Info</h2>
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <ul class="list-unstyled">
        <li>First name : <%= @user.first_name %></li>
        <li>Last name : <%= @user.last_name %></li>
        <li>Email : <%= @user.email %></li>
        <li>Password : ******** </li>
        <li>Birthdate : <%= @user.birth_date %></li>
        <li>Description : <%= @user.description %></li>
        <li>Started Yoga in : <%= @user.start_date %></li>
      </ul>
      <% if current_user.id == @user.id %>
        <ul class="list-unstyled">
          <li>
            <%= link_to "Edit info", edit_user_path(@user), html_option={class:"btn btn-primary"} %>
          </li>
          <li><p></p></li>
          <li>
            <%= link_to "Change password", edit_user_registration_path, html_option={class:"btn btn-info"}%>
          </li>
        </ul>
      <%end%>
    </div>
  </div>
</div>

